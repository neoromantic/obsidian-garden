        "html-minifier": "^4.0.0",
        "node-html-parser": "^6.1.12",
        "sass": "^1.74.1"
    },
    "dependencies": {
        "@11ty/eleventy-img": "^4.0.2",
        "@chrisburnell/svg-sparkline": "1.0.9",
        "@sindresorhus/slugify": "^2.2.1",
        "@vercel/blob": "0.22.1",
        "@vercel/og": "0.6.2",
        "ai": "3.0.7",
        "axios": "^1.6.7",
        "dotenv": "^16.4.5",
        "eleventy-plugin-gen-favicons": "^1.1.2",
        "eleventy-plugin-metagen": "1.8.3",
        "eleventy-plugin-nesting-toc": "^1.3.0",
        "fs-file-tree": "^1.1.1",
        "glob": "^10.3.10",
